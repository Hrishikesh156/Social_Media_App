<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChatActivity"
    android:background="#fff"
    android:padding="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="-140dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:clipToOutline="true"
            android:src="@drawable/back" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_58sdp"
            android:src="@drawable/profile"
            app:civ_border_color="@color/primary_purple"
            app:civ_border_width="1dp"
            android:layout_gravity="center"/>


    </LinearLayout>

    <TextView
        android:id="@+id/receiversName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/spartan_bold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll3"
        android:layout_below="@+id/receiversName" />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_39sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="#CAECFB"
            app:cardCornerRadius="@dimen/_500sdp">

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="@dimen/_188sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:fontFamily="@font/spartan_regular"
                android:hint="message..."
                android:paddingStart="@dimen/_7sdp"
                android:textColorHint="#9BC3EF"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/attachment"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_192sdp"
                app:srcCompat="@drawable/ic_attachment"
                app:tint="#508ED3"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/camera"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_220sdp"
                app:srcCompat="@drawable/ic_camera"
                app:tint="#508ED3"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_3sdp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendBtn"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_margin="@dimen/_3sdp"
            app:cardBackgroundColor="@color/primary_purple"
            app:cardCornerRadius="@dimen/_600sdp">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="center"
                android:background="@drawable/send_btn" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>